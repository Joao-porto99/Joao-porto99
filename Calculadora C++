#include <iostream>
using namespace std;

int
main ()
{
  float num1, num2;

  cout << "Primeiro número: ";
  cin >> num1;
  cout << "Segundo número: ";
  cin >> num2;

  cout << "Soma         : " << num1 + num2 << endl;
  cout << "Subtração    : " << num1 - num2 << endl;
  cout << "Multiplicação: " << num1 * num2 << endl;
  cout << "Divisão     : " << num1 / num2 << endl;
  cout << "Resto        : " << (int) num1 % (int) num2 << endl;
  cout << "Porcentagem  : " << 100.0 * (num1 / num2) << "%" << endl;
  cout << "Média        : " << (num1 + num2) / 2 << endl;

  return 0;
}
